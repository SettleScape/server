[Unit]
Description=settlescape server

[Service]
Type=idle

Environment="START_SCRIPT=start-service.sh"
Environment="SCREEN_NAME=SettleScape"

ExecStart="/srv/minecraft/settlescape/scripts/$START_SCRIPT"
ExecStop=/usr/bin/screen -S "$SCREEN_NAME" -X stuff 'stop \n'

Restart=on-failure
RestartSec=1s

WorkingDirectory=/srv/minecraft/settlescape

User=minecraft
Group=minecraft

[Install]
WantedBy=multi-user.target
