[Unit]
Description=settlescape server
After=network.target

[Service]
Type=idle

Environment="TERM=xterm-16color"

ExecStart="/srv/minecraft/settlescape/minecraft/scripts/start-server.sh"
ExecStop=/usr/bin/screen -S 'SettleScape' -X stuff 'stop \n'

Restart=on-failure
RestartSec=1s

WorkingDirectory=/srv/minecraft/settlescape/minecraft/scripts

User=minecraft
Group=minecraft

[Install]
WantedBy=multi-user.target
